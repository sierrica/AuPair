		<finalName>ROOT</finalName>

		<!-- Default Goai -->
		<!-- <defaultGoal>clean spring-boot:run</defaultGoal> -->

		<!-- Resources -->
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<!-- <exclude>public/www/index_cordova.html</exclude> -->
					<exclude>private/**/*</exclude>
				</excludes>
			</resource>
		</resources>

